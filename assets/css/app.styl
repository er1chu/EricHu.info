// 01. BASE

// Imports
@import 'nib'
global-reset()

// Variables
headlineFont = 'Bau LF', Helvetica, sans-serif
textFont = 'Big Caslon', 'Times New Roman', Times, serif
backgroundColor = #fff
textColor = #333
huge = 72px
big = 52px
med = 18px
smalle = 14px
lineHeight = 50px
mobileLineHeight = 24px
acronym = remove-unit(big) - unit(2, 'px')
mobileAcronym = remove-unit(med) - unit(1, 'px')
defaultTransition = all 0.2s
mobileWidth = "(max-width: 480px) and (min-width: 320px)"
hugeWidth = "(min-width: 1600px)"

// Mixins

font-url(file)
	return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal')
	@font-face
		font-family family
		src url(font-url(file + '.eot'))
		src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
			url(font-url(file + '.woff')) format('woff'), 
			url(font-url(file + '.ttf')) format('truetype'), 
			url(font-url(file + '.svg#'+ family)) format('svg')
		font-weight weight
		font-style normal
	if hack-chrome-windows
		@media screen and (-webkit-min-device-pixel-ratio:0)
			@font-face
				font-family family
				src url(font-url(file + '.svg#'+ family)) format('svg')


// Components

html
	background backgroundColor
	max-width 100%
	margin 0
	padding 0px
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	width 100%
	height 100%
	border-top: 2px solid textColor
	box-sizing border-box
	a
		text-decoration none
		color textColor


body
	width 100%
	height 100%
	box-sizing border-box
	line-height lineHeight
	font textFont

		@media mobileWidth
			line-height mobileLineHeight


