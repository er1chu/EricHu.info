// 01. VARIABLES

headlineFont = 'BauComp', Helvetica, san-serif
textFont = 'Big Caslon', 'Times New Roman', Times, serif
backgroundColor = #fff
textColor = #333
huge = 72px
big = 52px
med = 18px
smalle = 14px
lineHeight = 56px
mobileLineHeight = 28px
acronym = remove-unit(big) - unit(2, 'px')
mobileAcronym = remove-unit(med) - unit(1, 'px')
defaultTransition = all 0.2s
mobileWidth = "(max-width: 480px) and (min-width: 320px)"
hugeWidth = "(min-width: 1600px)"

// 02. IMPORTS

@import 'nib'
global-reset()

// 03. BASE

html
	background backgroundColor
	max-width 100%
	margin 0
	padding 0px
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	width 100%
	height 100%
	border-top: 2px solid textColor
	box-sizing border-box
	a
		text-decoration none
		color textColor


body
	width 100%
	height 100%
	box-sizing border-box
	line-height lineHeight
	font textFont

		@media mobileWidth
			line-height mobileLineHeight

// 04. LAYOUT

#rapper
	width 100%
	position absolute
	padding: 40px
	float left
	box-sizing border-box

	
.shove-trans
	-webkit-transition width 2s ease-in
    -moz-transition width 2s ease-in
    -o-transition width 2s ease-in


	@media mobileWidth
		padding 15px
		line-height mobileLineHeight
		letter-spacing 1px
	
