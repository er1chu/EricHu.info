.description
	display inline
	font big textFont
	letter-spacing 1px
	transition width 0.4s, height 0.4s

	p
		padding 0
		display inline

		a
			&:after
				content "â†¬"
				vertical-align super
				font-size 20px


	@media mobileWidth
		font med textFont
		letter-spacing 0px
