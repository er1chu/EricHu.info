.shove
	width 90% !important

.open
	width 20%
	position fixed
	height 100%
	padding 15px
	float left
	border-right 1px solid textColor
	box-sizing border-box
	font med textFont
	line-height mobileLineHeight

#drawer
	width 0



section
	width 100%
	float left
	color textColor
	
	img
		display inline-block
		width auto
		max-width 100%
		height auto

		@media mobileWidth
			width auto
			max-width 100%
			height auto
			display inline-block

.column
	margin 50px 0 0px 0
	padding 0 20px 0 0px
	width 25%
	font med headlineFont
	box-sizing border-box
	float left

	@media (max-width:800px)
		width 50%
	
	@media mobileWidth
		width 100%

	ul
		margin 0
		padding 0

		li
			list-style none
			margin 0
			padding 0
.column_2
	margin 50px 0 0 px 0
	padding 0 20px 0 0px
	width 50%
	font med headlineFont
	box-sizing border-box
	float left

	img
		max-width 100%

.stats
	margin 20px 0 0 0;

	abbr
		font-size mobileAcronym
		letter-spacing 0

	
	@media mobileWidth
		width 100%

.hidden
	display none


#swuigs
	display block
	text-align center
	margin 0 auto

#projects
	margin-top 20px

.project
	width 100%
	margin margin
	padding padding

.project-wrapper
	margin-bottom 70px


.title
	font big headlineFont
	// font-weight bold
	letter-spacing -1px
	box-sizing border-box
	border-bottom 1px solid textColor
	padding 0
	margin 0 100px 0 0

	p
		// border-bottom 2px solid textColor
		display inline-block
	
	@media mobileWidth
		font med headlineFont
		letter-spacing 0
		border-top 1px solid textColor
		border-bottom none
		margin 0 0 0px 0
		padding 15px 0 0 0
