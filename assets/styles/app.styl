headlineFont = 'Px Grotesk', Helvetica, san-serif
textFont = 'Big Caslon', 'Times New Roman', Times, serif
backgroundColor = #fff
textColor = #333
big = 52px
med = 18px
small = 14px
lineHeight = 38px
mobileLineHeight = 24px
acronym = remove-unit(big) - unit(1, 'px')

html
	font textFont
	background backgroundColor
	line-height lineHeight
	margin 0
	padding 20px
	width 100%
	border-top: 2px solid textColor
	box-sizing border-box

	@media (max-width: 480px) and (min-width: 320px)
		line-height mobileLineHeight
		padding: 5px

body
	padding: 20px
	width 98%
	box-sizing border-box


section
	width 100%
	float left
	color textColor
	
	img
		max-width 65%
		display inline-block

		@media (max-width: 480px) and (min-width: 320px)
			max-width 100%
			display inline-block

.project
	width 100%
	margin margin
	padding padding


.title
	font big headlineFont
	font-weight bold
	display inline
	letter-spacing -1px
	box-sizing border-box
	margin 0
	padding -5px
	border-bottom 2px solid textColor

	p
		// border-bottom 2px solid textColor
		display inline
	
	@media (max-width: 480px) and (min-width: 320px)
		font med headlineFont
		font-weight bold
		border-bottom none
		padding 0
		display block

.description
	display inline
	font big textFont
	transition width 0.4s, height 0.4s


	p
		padding 0
		display inline

	@media (max-width: 480px) and (min-width: 320px)
		font med textFont


abbr
	font-size acronym




.med
	font med textFont

#projects
	margin-top 20px

.media
	text-align center
	margin: 60px 0 40px 0

.more
	cursor pointer
	font-family headlineFont
	





