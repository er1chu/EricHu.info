headlineFont = 'BauComp', Helvetica, san-serif
textFont = 'Big Caslon', 'Times New Roman', Times, serif
backgroundColor = #fff
textColor = #333
huge = 72px
big = 52px
med = 18px
smalle = 14px
lineHeight = 56px
mobileLineHeight = 26px
acronym = remove-unit(big) - unit(2, 'px')
mobileAcronym = remove-unit(med) - unit(1, 'px')
defaultTransition = all 0.2s
mobileWidth = "(max-width: 480px) and (min-width: 320px)"
hugeWidth = "(min-width: 1600px)"


//RESET
html, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary, time, mark, audio, video
  margin 0
  padding 0
  border 0
  font-size 100%
  font inherit
  vertical-align baseline

article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section
  display block

body
  line-height 1

ol, ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after, q:before, q:after
  content ""
  content none

table
  border-collapse collapse
  border-spacing 0


//STRUCTURE

html
	background backgroundColor
	max-width 100%
	margin 0
	padding 0px
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	width 100%
	height 100%
	border-top: 2px solid textColor
	box-sizing border-box
	a
		text-decoration none
		color textColor


body
	width 100%
	height 100%
	box-sizing border-box
	line-height lineHeight
	font textFont


#rapper
	width 100%
	position absolute
	padding: 40px
	float left
	box-sizing border-box
	
.shove-trans
	-webkit-transition width 2s ease-in
    -moz-transition width 2s ease-in
    -o-transition width 2s ease-in


	@media mobileWidth
		padding 15px
		line-height mobileLineHeight
	
	@media (min-width: 2000px)
		width 90%
		position absolute
		left 50%
		margin-left -45%
		padding 15px

.shove
	width 90% !important

.open
	width 20%
	position fixed
	height 100%
	padding 15px
	float left
	border-right 1px solid textColor
	box-sizing border-box
	font med textFont
	line-height mobileLineHeight

#drawer
	width 0


section
	width 100%
	float left
	color textColor
	
	img
		display inline-block
		width auto
		max-width 100%
		height auto

		@media mobileWidth
			width auto
			max-width 100%
			height auto
			display inline-block

#swuigs
	display block
	text-align center
	margin 0 auto

#projects
	margin-top 20px

.project
	width 100%
	margin margin
	padding padding

.project-wrapper
	margin-bottom 70px


.title
	font big headlineFont
	// font-weight bold
	letter-spacing -1px
	box-sizing border-box
	border-bottom 1px solid textColor
	padding 0
	margin 0 100px 0 0

	p
		// border-bottom 2px solid textColor
		display inline-block
	
	@media mobileWidth
		font med headlineFont
		font-weight bold
		border-bottom none
		padding 0
		display block

	@media hugeWidth
		font huge headlineFont

.description
	display inline
	font big textFont
	letter-spacing 1px
	transition width 0.4s, height 0.4s

	p
		padding 0
		display inline

		a
			&:after
				content "â†¬"
				vertical-align super
				font-size 20px


	@media mobileWidth
		font med textFont
		letter-spacing 0px
	
	@media hugeWidth
		font huge textFont

footer
	font med headlineFont



abbr
	font-size acronym
	letter-spacing 2px

	@media (max-width: 480px) and (min-width: 320px)
		font-size mobileAcronym




.med
	font med textFont


.media
	text-align center
	margin: 60px 0 40px 0

.more
	cursor pointer
	font-family headlineFont
	letter-spacing 0px

.extended
	display inline


input 
	border 1px solid textColor
	width 200px
	font smalle headlineFont
	padding 10px

	&:focus
		outline none !important

input[type=submit]
	background-color #fff
	-webkit-transition defaultTransition
	transition defaultTransition
	width 100px
	
	&:hover
		background textColor
		color backgroundColor
		cursor pointer

.videoWrapper
	position relative
	padding-bottom 56.25%
	padding-top 25px
	height 0
	
	iframe
		position absolute
		display block
		top 0
		left 0
		width 100%
		height 100%






